# ==================================
# LearnNest Backend - 基础配置
# 所有环境共享的默认值
# ==================================

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 数据库配置（连接池）
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2
DATABASE_CONNECT_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600

# JWT 配置
JWT_EXPIRATION_DAYS=7

# 日志配置
LOG_FORMAT=json

# 请求限制
REQUEST_BODY_LIMIT=10485760
REQUEST_TIMEOUT=30
